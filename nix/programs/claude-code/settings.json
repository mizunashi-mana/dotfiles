{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(chmod +x:*)",
      "Bash(cp:*)",
      "Bash(devenv test)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(file:*)",
      "Bash(gemini:*)",
      "Bash(git diff:*)",
      "Bash(git ls-files:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(make)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm ci)",
      "Bash(npm install)",
      "Bash(npm outdated:*)",
      "Bash(npm run)",
      "Bash(npm test)",
      "Bash(npm uninstall:*)",
      "Bash(npx eslint:*)",
      "Bash(od:*)",
      "Bash(pwd:*)",
      "Bash(pre-commit run:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(shellcheck:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(tar:*)",
      "Bash(touch:*)",
      "Bash(true)",
      "Bash(type:*)",
      "Bash(uniq:*)",
      "Bash(unzip:*)",
      "Bash(uv remove:*)",
      "Bash(uv sync)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(xargs npx eslint:*)",
      "mcp__eslint__lint-files",
      "mcp__fetch__fetch(url:http://localhost*)",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_handle_dialog",
      "mcp__playwright__browser_install",
      "mcp__playwright__browser_navigate(url:http://localhost*)",
      "mcp__playwright__browser_navigate(url:file://*)",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_type",
      "WebFetch(domain:localhost)"
    ],
    "defaultMode": "acceptEdits",
    "deny": [
      "Bash(rm:* ..*)",
      "Bash(rm:* *.git*)"
    ]
  }
}
